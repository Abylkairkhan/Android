<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#729599">

        <ImageView
            android:id="@+id/mv_poster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_not_found"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alegreya_sans_extrabold"
            android:text="Movie Title xxxxxxxxxxxxxxxxxx"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toEndOf="@+id/mv_poster"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mv_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alegreya_sans_extrabold"
            android:text="Vote avg"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/mv_title"
            app:layout_constraintTop_toBottomOf="@+id/mv_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>